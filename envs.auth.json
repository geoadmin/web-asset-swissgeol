{
    "$schema": "https://sos-ch-dk-2.exo.io/lqd/json/env-schema.json",
    "onePassword": [
        {
            "itemUrl": "https://start.1password.com/open/i?v=q7jk2jxvqwnfjyxlitdnvz2xg4&i=dyksefuvcfldcdpror57wxsubm",
            "mapping": [
                {
                    "field": "Benutzername",
                    "env": "POSTGRES_USER"
                },
                {
                    "field": "Passwort",
                    "env": "POSTGRES_PASSWORD"
                },
                {
                    "field": "database",
                    "env": "POSTGRES_DB"
                },
                {
                    "field": "URL",
                    "env": "POSTGRES_URL"
                },
                {
                    "field": "port",
                    "env": "POSTGRES_PORT"
                }
            ]
        },
        {
            "itemUrl": "https://start.1password.com/open/i?v=q7jk2jxvqwnfjyxlitdnvz2xg4&i=mjbcvmegzkd7qvxw2sndykowlm",
            "mapping": [
                {
                    "field": "password",
                    "env": "GOTRUE_JWT_SECRET"
                }
            ]
        },
        {
            "itemUrl": "https://start.1password.com/open/i?v=q7jk2jxvqwnfjyxlitdnvz2xg4&i=a3yrueev2j3yevg2bndukhm7ii",
            "mapping": [
                {
                    "field": "username",
                    "env": "GOTRUE_SMTP_USER"
                },
                {
                    "field": "password",
                    "env": "GOTRUE_SMTP_PASS"
                }
            ]
        }
    ],
    "envs": [
        {
            "name": "GOTRUE_API_HOST",
            "value": "0.0.0.0"
        },
        {
            "name": "GOTRUE_SITE_URL",
            "value": "https://asset-sg.lqd.lambda-it.ch"
        },
        {
            "name": "GOTRUE_COOKIE_KEY",
            "value": "asset-sg"
        },
        {
            "name": "GOTRUE_DB_DRIVER",
            "value": "postgres"
        },
        {
            "name": "DB_NAMESPACE",
            "value": "auth"
        },
        {
            "name": "DATABASE_URL",
            "value": "postgres://$(POSTGRES_USER):$(POSTGRES_PASSWORD)@$(POSTGRES_URL):$(POSTGRES_PORT)/$(POSTGRES_DB)"
        },
        {
            "name": "GOTRUE_DISABLE_SIGNUP",
            "value": "false"
        },
        {
            "name": "GOTRUE_SMTP_HOST",
            "value": "smtp.swizzonic-mail.ch"
        },
        {
            "name": "GOTRUE_SMTP_PORT",
            "value": "465"
        },
        {
            "name": "GOTRUE_SMTP_ADMIN_EMAIL",
            "value": "info@digital-factory-bern.ch"
        },
        {
            "name": "GOTRUE_SMTP_SENDER_NAME",
            "value": "asset-swissgeol"
        },
        {
            "name": "GOTRUE_MAILER_URLPATHS_INVITE",
            "value": "https://asset-sg.lqd.lambda-it.ch/auth/verify"
        },
        {
            "name": "GOTRUE_MAILER_URLPATHS_CONFIRMATION",
            "value": "/auth/v1/verify"
        },
        {
            "name": "GOTRUE_MAILER_URLPATHS_RECOVERY",
            "value": "https://asset-sg.lqd.lambda-it.ch/auth/verify"
        },
        {
            "name": "GOTRUE_MAILER_URLPATHS_EMAIL_CHANGE",
            "value": "/auth/v1/verify"
        },
        {
            "name": "GOTRUE_MAILER_SUBJECTS_INVITE",
            "value": "{{if eq .Data.language \"de\"}} Einladung für asset.swissgeol.ch Login {{else if eq .Data.language \"fr\"}} Invitation à se connecter à asset.swissgeol.ch {{else if eq .Data.language \"it\"}} Invito all''accesso a asset.swissgeol.ch {{else if eq .Data.language \"rm\"}} RM TODO TRANSLATE Einladung für asset.swissgeol.ch Login {{else}} Invitation to asset.swissgeol.ch {{end}}"
        },
        {
            "name": "GOTRUE_MAILER_TEMPLATES_INVITE",
            "value": "https://asset-sg.lqd.lambda-it.ch/assets/email-templates/invite.html"
        },
        {
            "name": "GOTRUE_MAILER_SUBJECTS_RECOVERY",
            "value": "{{if eq .Data.language \"de\"}} Passwort zurücksetzen für asset.swissgeol.ch {{else if eq .Data.language \"fr\"}} Réinitialiser le mot de passe pour asset.swissgeol.ch {{else if eq .Data.language \"it\"}} Reimpostare la password di asset.swissgeol.ch {{else if eq .Data.language \"rm\"}} RM TODO TRANSLATE Passwort zurücksetzen für asset.swissgeol.ch {{else}} Password reset for asset.swissgeol.ch {{end}}"
        },
        {
            "name": "GOTRUE_MAILER_TEMPLATES_RECOVERY",
            "value": "https://asset-sg.lqd.lambda-it.ch/assets/email-templates/recover.html"
        }
    ]
}
